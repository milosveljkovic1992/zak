{
  "endOfLine": "lf",
  "printWidth": 120,
  "tabWidth": 2,
  "trailingComma": "es5",
  "semi": true,
  "singleQuote": true,
  "jsxSingleQuote": false,
  "arrowParens": "always",
  "overrides": [
    {
      "files": ["**/*.css", "**/*.scss", "**/*.html"],
      "options": {
        "singleQuote": false
      }
    }
  ],
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react$",
    "^(@|react)",
    "^\\w",
    "^\\.{1}/(?!.*(?:\\.css|\\.svg|constants|polyfill[s]?)$)",
    "^\\.{2}/(?!.*(?:\\.css|\\.svg|constants|polyfill[s]?)$)",
    "\\.css$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
